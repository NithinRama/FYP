{
        "intents": {
                "menu": {
                        "parameters": [],
                        "utterances": [
                                "what is the menu",
                                "show me menu",
                                "menu",
                                "I want to see the menu"
                        ],
                        "response": {
                                "value": "menu",
                                "type": "mb"
                        }
                },
                "order": {
                        "parameters": [
                                {
                                        "name": "size",
                                        "type": "@size",
                                        "isList": false
                                },
                                {
                                        "name": "base",
                                        "type": "@base",
                                        "isList": false
                                },
                                {
                                        "name": "toppings",
                                        "type": "@toppings",
                                        "isList": true
                                }
                        ],
                        "utterances": [
                                "order",
                                "let me order",
                                "I want a @size pizza with @toppings"
                        ],
                        "response": {
                                "value": "order",
                                "type": "mb"
                        }
                },
                "status": {
                        "parameters": [],
                        "utterances": [
                                "what is the status of my order",
                                " status",
                                "what happened to my order"
                        ],
                        "response": {
                                "type": "text",
                                "value": "this should be status"
                        }
                }
        },
        "entities": {
                "size": [
                        "small",
                        "medium",
                        "large"
                ],
                "base": [
                        "pan",
                        "cheese burst",
                        "thin"
                ],
                "toppings": [
                        "onion",
                        "mushrrom",
                        "tomato"
                ],
                "drink": [
                        "sprite",
                        "coke",
                        "fanta"
                ]
        },
        "microBots": {
                "order": {
                        "start": {
                                "response":{
                                        "type": "text",
                                        "value": "Ok, would you like a breverage along with your order?"
                                },
                                "transitions":{
                                        "yes": {
                                                "nextState": "question1"
                                        },
                                        "no": {
                                                "nextState": "db1"
                                        },
                                        "string": {
                                                "reply": "I did not quite get that, do you want extra breverage?"
                                        }
                                }
                        },
                        "question1": {
                                "response": {
                                        "type": "text",
                                        "value": "Sure, Which breverage do you want?"
                                },
                                "transitions":{
                                        "breverage": {
                                                "nextState": "db1"
                                        }
                                }
                        },
                        "db1":{
                                "response": {
                                        "type": "text",
                                        "value": "Your order has been recorded, here is a summary, size is @size, toppings are @toppings, base is @base, breverage as @breverage"
                                }
                        }
                },
                "menu": {
                        "start": {
                                "response":{
                                        "type": "text",
                                        "value": "We have pizzas, toppings available are onion, mushroom, tomato. Would you like to see what breverages we have?"
                                },
                                "transitions":{
                                        "yes": {
                                                "nextState": "showDrinks"
                                        },
                                        "no": {
                                                "reply": "Okay"
                                        },
                                        "string": {
                                                "reply": "I did not quite get that, would you like to see breverages menu?"
                                        }
                                }
                        },
                        "showDrinks": {
                                "response":{
                                        "value": "Fanta, coke, sprite",
                                        "type": "text"
                                }
                        }
                },
                "drinks": {
                        "start": {
                                "response":{
                                        "type": "text",
                                        "value": "We have, Fanta, coke, sprite. Would you like to know anything else?"
                                },
                                "transitions":{
                                        "yes": {
                                                "nextState": "you can visit https://pizza.com/aboutus to find out more about us."
                                        },
                                        "string": {
                                                "reply": "We have, Fanta, coke, sprite. Would you like to know anything else?"
                                        }
                                }
                        }
                }
        }
}